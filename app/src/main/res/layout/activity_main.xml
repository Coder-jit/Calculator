<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:layout_above="@id/result"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:id="@+id/solution"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:layout_above="@id/button_cal"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:id="@+id/result"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="12dp"
        android:id="@+id/button_cal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="c"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:id="@+id/button_c"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="("
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/darker_gray"
                android:id="@+id/button_openbraket"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text=")"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/darker_gray"
                android:id="@+id/button_closebraket"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="/"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:id="@+id/button_divide"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="7"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_7"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="8"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_8"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="9"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_9"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="*"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:id="@+id/button_multiplie"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="4"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_4"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="5"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_5"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="6"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_6"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="+"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:id="@+id/button_plus"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="1"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_1"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="2"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_2"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="3"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_3"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="-"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:id="@+id/button_minus"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="AC"
                app:backgroundTint="@android:color/holo_red_dark"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:id="@+id/button_AC"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="0"
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_zero"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="."
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:id="@+id/button_Dot"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:text="="
                android:textSize="32dp"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:id="@+id/button_equal"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>